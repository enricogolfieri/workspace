#run docker image with base environment loaded
FROM ubuntu:18.04
RUN . $HOME/.config/workspace/envs/.aliases
RUN activate-base-bash

# Authorize SSH Host
RUN mkdir -p /root/.ssh && \
    chmod 0700 /root/.ssh && \
    ssh-keyscan github.com > /root/.ssh/known_hosts

# Add the keys and set permissions
RUN cp -r "$HOME/.ssh/id_rsa"  /root/.ssh/id_rsa && \
    cp -r "$HOME/.ssh/id_rsa.pub"  /root/.ssh/id_rsa.pub && \
    chmod 600 /root/.ssh/id_rsa && \
    chmod 600 /root/.ssh/id_rsa.pub

RUN echo "Base environment activated, running." 
RUN osinfo


