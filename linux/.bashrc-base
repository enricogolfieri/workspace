### Do not put duplicate lines or lines starting with space in the history
export HISTCONTROL=ignoreboth

### Append to the history file (do not overwrite it)
shopt -s histappend

### Silence zsh message as default shell
export BASH_SILENCE_DEPRECATION_WARNING=1


### Set aliases
alias ls='ls -h --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias rm='rm -i'
alias grep='grep --color=always'
alias more='more --RAW-CONTROL-CHARS --chop-long-lines'
alias less='less --RAW-CONTROL-CHARS --chop-long-lines --IGNORE-CASE'
alias v='vim'
alias cdws='cd ~/.config/workspace'

### Set fzf (command-line fuzzy finder)
[[ -f ~/.fzf.bash ]] && . ~/.fzf.bash

### Update path #####
export PATH=~/.config/workspace/linux/sysutil:${PATH}\

### functions ######
cheat() { curl cheat.sh/"$1" ; }

## Workspace functions #####
function workspace-git-pull() {
    cd ~/.config/workspace
    git pull
    cd -
}

function workspace-git-push() {
    cd ~/.config/workspace
    git push
    cd -
}

function workspace-update-dependencies(){
    apt-get install 
}

## system utilities #####
function sys-clean-tmp()
{
    sudo find /tmp -type f -atime +10 -delete
}




