### functions ######
cheat() { curl cheat.sh/"$1" ; }

## Workspace functions #####
function workspace-update() {
    cd ~/.config/workspace
    git pull
    cd -
}

function workspace-code()
{
    code ~/.config/workspace
}

function cdws()
{
    cd ~/.config/workspace
}

## system utilities #####
function ws-cleantmp()
{
    _daystoleave=10
    [[ ! -z "$1" ]] && _daystoleave=$1
    sudo find /tmp -type f -atime +$_daystoleave -delete
}

function ws-backup()
{
    mkdir -p ~/backups 
    cp $1 ~/backups/$1 
    local __size=$(wc -c ~/backups/$1 | awk '{print $1}')

    echo "Backup of $1 created. Size: $__size"
}


