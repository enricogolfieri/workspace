### Utils ####

cheat() { curl cheat.sh/"$1" ; }

### Set aliases
alias ls='ls -h --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias rm='rm -i'
alias grep='grep --color=always'
alias more='more --RAW-CONTROL-CHARS --chop-long-lines'
alias less='less --RAW-CONTROL-CHARS --chop-long-lines --IGNORE-CASE'

function osinfo(){
    if [[ -n "$_is_macos" ]]; then
        echo "OS: Mac OS"
        echo "Version: $(sw_vers -productVersion)"
        echo "Build: $(sw_vers -buildVersion)"
    elif [[ -n "$_is_linux" ]]; then
        echo "OS: Linux"
        echo "Version: $(lsb_release -a)"
    fi
}

## system utilities #####
function ws-cleantmp()
{
    _daystoleave=10
    [[ ! -z "$1" ]] && _daystoleave=$1
    sudo find /tmp -type f -atime +$_daystoleave -delete
}

## Workspace functions #####
function ws-update-base() {
    cd $HOME/.config/workspace
    git pull
    cd -
}

function ws-code()
{
    code $HOME/.config/workspace
}

function cdws()
{
    cd $HOME/.config/workspace
}
